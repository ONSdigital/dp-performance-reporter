{
  "metrics": [
    {
      "name": "request-time-1-day",
      "frequency": "hourly",
      "query": {
        "query": "(index=sandbox) metricsType=REQUEST_TIME | timechart span=1d avg(timeTaken)",
        "start-date": "1daysAgo",
        "end-date": "today"
      },
      "meta": {
        "name": "Average request time",
